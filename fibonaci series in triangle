import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		System.out.println("fibonacci triangle");
		Scanner s=new Scanner(System.in);
		System.out.println("enter the limit you want");
		int a=s.nextInt();
		int n=0;
		int n1=1,sum;
		for(int i=0;i<=a;i++)
		{
		    for(int j=0;j<=i;j++)
		    {
		    System.out.print(n);
		    sum=n+n1;
		    n=n1;
		    n1=sum;
		    }
		    System.out.println();
		}
		
	}
}



output:

fibonacci triangle
enter the limit you want
2


0
11
235
