import java.util.Scanner;
import java.util.Arrays;
public class Main
{
	public static void main(String[] args) {
	    Scanner s=new Scanner(System.in);
		System.out.println("Merged sorted Array");
		System.out.println("enter the limit for  1st array");
		int a=s.nextInt();
		System.out.println("enter the 1st array");
		int num[]=new int[a];
		for(int i=0;i<a;i++)
		{
		    num[i]=s.nextInt();
		}
		System.out.println("enter the limit for 2nd array");
		int b=s.nextInt();
		System.out.println("enter the 2nd array");
		int num1[]=new int[b];
		for(int j=0;j<b;j++)
		{
		    num1[j]=s.nextInt();
		}
		int length=num.length;
		int count=0;
		for(int l=0;l<num.length;l++)
		{
		if(num[l]==0)
		{
		    count++;
		}
		}
		int m=num.length-count;
		System.out.println("total length of 1st array"+ " " + m);
		int length1=num1.length;
		int count1=0;
		for(int l1=0;l1<num1.length;l1++)
		{
		    if(num1[l1]==0)
		    {
		        count1++;
		    }
		}
		int n=num1.length-count1++;
		System.out.println("total length of 2nd array"+ " " + n);
		int num2[]=new int[num.length + num1.length];
	
}
}




